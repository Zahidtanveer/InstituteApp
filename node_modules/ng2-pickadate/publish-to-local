#!/bin/sh

date
TARGET="../ng2-pickadate_demo/node_modules/ng2-pickadate/"
#TARGET="../../webpack-pickadate/node_modules/ng2-pickadate/"
#TARGET="../../../listLocal/frontend-ng/node_modules/ng2-pickadate/"

npm run build

rm -r $TARGET
mkdir $TARGET

cp -a ./lib $TARGET
cp -a ./src $TARGET
cp -a ./shared $TARGET/lib
cp ./ng2-pickadate.d.ts $TARGET
cp ./ng2-pickadate.js $TARGET
cp ./package.json $TARGET
cp ./tsconfig.json $TARGET